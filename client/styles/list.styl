@import 'nib'

greenish  = rgb(79,198,128)
yellowish = rgb(255,245,114)
list-width = 350px


@keyframes urgent
  0%
    background greenish
  80%
    background greenish
  100%
    background yellowish

html, body
  height 100%

svg.returns
  position fixed
  margin-top 50px
  margin-left 80px

.page_wrapper
  float left
  width 100%
  height 100%
  box-sizing border-box
  background #fff

  #graphic_column
    width 100%
    height 100%

  #loans_column
    width list-width
    margin-left auto
    margin-right auto

    button#see-all-loans
      position relative
      // 20 boxes, 60px high, plus a bit
      top 60 * 20 + 23 px
      margin-bottom 20px
    
    ul.loans
      position relative
      list-style none
      margin 5px 0
      padding 0
      li
        // d3 transitions the opacity to 1
        opacity 0
        // transition all 0.5s ease-in-out
        position absolute
        margin 5px 0
        border-radius 3px
        box-shadow 0 1px 3px 0 
        font-size 0.6875em
        .funding_bar
          // overflow hidden
          position relative
          background-color greenish
          height 100%
          &.urgent
            animation urgent 4s infinite alternate
          .hover_mask
            border-radius 3px
            width list-width
            background-color rgba(0,0,0,0)
            z-index 1
            display none
            position absolute
            top 0
            right 0
            bottom 0
            left 0
            .btn
              margin-left 30px
              margin-right 30px
          .loan_stats
            width list-width
            background-color rgba(255,255,255,0.7)
            div
              display inline-block

            .funding_percent, .net_return
              margin-left 7px
              margin-right -7px
              text-align left
              width 25%
            .time_left, .risk
              margin-left -7px
              width 75%
              text-align right


.loan_stats:hover + .hover_mask, .hover_mask:hover
  display block !important
  background-color rgba(0,0,0,0.3) !important
          
