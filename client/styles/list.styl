@import 'nib'

greenish  = rgb(79,198,128)
yellowish = rgb(255,245,114)
list-width = 100%
widget-width = 550px


@keyframes urgent
  0%
    background greenish
  75%
    background greenish
  100%
    background yellowish

html, body
  height 100%
  min-width 430px

svg.returns
  position fixed
  margin-top 50px
  margin-left 80px

.page_wrapper
  float left
  width 100%
  height 100%
  box-sizing border-box
  background #fff

  #graphic_column
    width 100%
    height 100%

  #risk-widget
    width widget-width
    margin-left auto
    margin-right auto
    .risk-appetite
      display inline-block
      margin 5px 13px

  #loans_column
    width list-width
    margin-left auto
    margin-right auto

    button#see-all-loans
      position relative
      // 20 boxes, 60px high, plus a bit
      top 60 * 20 + 23 px
      margin-bottom 20px
    
    ul.loans
      position relative
      list-style none
      margin 5px 0
      padding 0
      li
        width list-width
        // d3 transitions the opacity to 1
        opacity 0
        // transition all 0.5s ease-in-out
        position absolute
        margin 5px 0
        font-size 0.6875em
        .relative-container
          position relative
          border-top 3px solid #cccccc
          border-bottom 5px solid white
          background-color #e7e7e7
          margin-bottom 5px
          .funding_bar, .hover_mask
            position absolute
        .funding_bar
          z-index 0
          // overflow hidden
          background-color greenish
          height 100%
          &.urgent
            animation urgent 3s infinite alternate
        .hover_mask
          border-radius 3px
          width list-width
          background-color rgba(255,255,255,0)
          z-index 2
          display none
          top 0
          right 0
          bottom 0
          left 0
          .btn
            margin-top 18px
        .loan_stats
          position relative
          z-index: 1
          width list-width
          background-color rgba(255,255,255,0.7)
          color rgb(52, 73, 94)
          font-family "Lato", Helvetica, Arial, sans-serif
          .metric
            width 20%
            margin-top: 15px
            margin-bottom: 12px
            display inline-block
            margin 
          b, p
            margin 0
          b
            font-size 30px
          p
            font-size 18px
            @media screen and (max-width: 580px)
              font-size 12px
          .time_left
            margin-top -43px
            width 25%
            display inline-block
            vertical-align middle


.loan_stats:hover + .hover_mask, .hover_mask:hover
  display block !important
  background-color rgba(255,255,255,0.7) !important
          
